<h2>Contributors</h2>

<div class="contributors">
	<% if @contributors.length > 0 %>
		<% @contributors.each do |contributor| %>
	  	<article class="contributor">
		  	<div class="contributor__container">
		  		<div class="contributor__image">
						<%= image_tag contributor.avatar.url(:thumb), class: "avatar" %>
					</div>
				  <div class="contributor__text">
				  	<h3 class="contributor__title">Written by <%= contributor.name %></h3>
				  	<p><%= contributor.bio %></p>
				  	<div class="contributor__social">
				  		<a href="<%= contributor.site %>"><i class="fa fa-globe" aria-hidden="true"></i></a>
				  		<a href="https://twitter.com/<%= contributor.twitter %>"><i class="fa fa-twitter" aria-hidden="true"></i></a>
				  	</div>
				  </div>
		  	</div>
	  	</article>
		  <div class="admin__buttons">
		  	<%= link_to 'Edit', edit_contributor_path(contributor), class: 'btn btn--safe btn--small' %>
		  	<%= link_to 'Destroy', contributor, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn--danger btn--small' %>
	  	</div>
		<% end %>
	<% elsif %>
		<p>There are no contributors.</p>
	<% end %>
</div>

<%= link_to 'Add Contributor', new_contributor_path, class:'btn btn--safe' %>

