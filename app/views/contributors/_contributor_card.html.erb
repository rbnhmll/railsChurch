<!-- Contributor Card -->
<article class="contributor">
	<div class="contributor__container">
		<div class="contributor__image">
			<%= image_tag contributor.avatar.url(:thumb), class: "avatar" %>
		</div>
	  <div class="contributor__text">
	  	<h3 class="contributor__title">Written by <%= contributor.name %></h3>
	  	<p><%= contributor.bio %></p>
	  	<div class="contributor__social">
	  	<% unless contributor.site == "" %>
	  		<a href="<%= contributor.site %>" target="_blank"><i class="fa fa-globe" aria-hidden="true" title="Website"></i></a>
	  	<% end %>
	  	<% unless contributor.site == "" %>
	  		<a href="https://twitter.com/<%= contributor.twitter %>" target="_blank"><i class="fa fa-twitter" aria-hidden="true" title="Twitter"></i></a>
	  	<% end %>
	  	</div>
	  </div>
	</div>
</article>