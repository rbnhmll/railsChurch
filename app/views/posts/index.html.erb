<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<div class="posts">
	<% @posts.each do |post| %>
	  <div class="post">
		  <h2><%= post.title %></h2>
		  <p><%= post.content %></p>
		  <p><%= post.active %></p>
		  <%= link_to 'Show', post %>
		  <%= link_to 'Edit', edit_post_path(post) %>
		  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
	  </div>
	<% end %>
</div>

<%= link_to 'New Post', new_post_path %>